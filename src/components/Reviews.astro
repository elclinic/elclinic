---
interface Review {
    id: number;
    name: string;
    date: string;
    text: string;
    rating: number;
    avatar?: string;
}

const reviews: Review[] = [
    {
        id: 1,
        name: "Анна Петренко",
        date: "15 липня 2024",
        text: "Професійний підхід, сучасне обладнання та привітний персонал. Лікування пройшло абсолютно безболісно, рекомендую клініку всім!",
        rating: 5,
        avatar: "/avatars/1.jpg"
    },
    {
        id: 2,
        name: "Олег Сидоренко",
        date: "10 липня 2024",
        text: "Найкращий стоматологічний досвід у моєму житті. Зробили імплантацію якісно та з гарантією. Персонал уважний до деталей.",
        rating: 5,
        avatar: "/avatars/2.jpg"
    },
    // Додайте інші відгуки
];
---

<section id="reviews" class="py-16 bg-[#2A2525] rounded-2xl mb-8">
    <div class="container mx-auto px-4 lg:px-8">
        <h2 class="text-3xl font-bold mb-12 text-center text-gray-100">Відгуки пацієнтів</h2>

        <div class="max-w-6xl mx-auto space-y-8">
            {reviews.map(review => (
                    <article class="bg-[#363232] rounded-xl p-6 shadow-lg border-l-4 border-primary-500">
                        <div class="flex items-start gap-4 mb-4">
                            {review.avatar ? (
                                    <img
                                            src={review.avatar}
                                            alt={review.name}
                                            class="w-14 h-14 rounded-full object-cover flex-shrink-0"
                                            loading="lazy"
                                    />
                            ) : (
                                    <div class="w-14 h-14 rounded-full bg-primary-500 flex items-center justify-center flex-shrink-0">
                <span class="text-gray-100 text-xl font-medium">
                  {review.name.charAt(0)}
                </span>
                                    </div>
                            )}

                            <div class="flex-1">
                                <div class="flex items-center justify-between mb-2">
                                    <h3 class="text-lg font-semibold text-gray-100">{review.name}</h3>
                                    <time class="text-sm text-gray-400">{review.date}</time>
                                </div>

                                <div class="flex items-center gap-2 mb-3">
                                    <div class="flex text-primary-400">
                                        {[...Array(5)].map((_, i) => (
                                                <svg
                                                        class={`w-5 h-5 ${i < review.rating ? 'fill-current' : 'fill-gray-600'}`}
                                                        viewBox="0 0 20 20"
                                                >
                                                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                                                </svg>
                                        ))}
                                    </div>
                                </div>

                                <p class="text-gray-300 leading-relaxed">
                                    {review.text}
                                </p>
                            </div>
                        </div>
                    </article>
            ))}
        </div>

        <div class="mt-12 text-center">
            <button class="bg-primary-500 hover:bg-primary-600 text-white px-8 py-3 rounded-lg transition-colors duration-300">
                Показати ще
            </button>
        </div>
    </div>
</section>

<style>
    .bg-primary-500 { background-color: #72706c; }
    .bg-primary-600 { background-color: #403e3d; }
    .text-primary-400 { color: #F3A446; }
</style>