        <h2 class="text-3xl font-bold mb-8 text-center">Прайс-лист</h2>

        <div class="space-y-8">
            {priceList.map((section) => (
                    <div class="bg-[#363232] rounded-xl p-6 shadow-lg">
                        <div class="mb-4">
                            <h3 class="text-2xl font-semibold text-primary-400">{section.category}</h3>
                            {section.description &&
                                    <p class="text-gray-400 mt-2 text-sm">{section.description}</p>
                            }
                        </div>

                        <div class="space-y-4">
                            {section.items.map((item) => (
                                    <div class="flex justify-between items-center py-3 px-4 bg-[#2A2525] rounded-lg hover:bg-[#302b2b] transition-colors">
                                        <span class="text-gray-300">{item.name}</span>
                                        <span class="font-medium text-primary-300">{item.price}</span>
                                    </div>
                            ))}
                        </div>
                    </div>
            ))}
